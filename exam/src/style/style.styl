
@require './libraries/reset.css'
@require 'variables.styl'
@require './libraries/slick.css'
@require './libraries/slick-theme.css'
@require 'fonts.styl'
@require 'stylesForDevices/minWidth1440px.styl'
@require 'stylesForDevices/768pxTo1399px.styl'
@require 'stylesForDevices/320pxTo767px.styl'
@require 'stylesForDevices/maxWidth320px.styl'

.clearfix:after
  clear both
  content""
  display block

body
    font-size: mainFont
/***delete dotted border outline button*/
:focus {outline:none;}
::-moz-focus-inner {border:0;}

    /********************************--HEADER--************************************/

.brandname
    font-family: Montserrat
    color white

.brandname--red
  color: buttonRed 

.login-panel
  padding-bottom 15.35%

.signin_panel
  float right
  width 270px

.button
  display: block
  font-family: Montserrat-Bold
  font-size 1.1em
  color white
  line-height 1em
  height 100%
  text-align: center
  text-decoration: none
  border none

.button-white-red
  box-sizing: border-box
  border: 3px solid buttonRed
  color: buttonRed
  width 270px
  margin 0 auto
  padding 0.98em
  letter-spacing 0.02em
  border-radius 230px

.button:hover
    cursor pointer

.button_bordered
  border 3px solid white
  padding 4.8% 8.2%
  border-radius 30px
  display inline-block
  margin-left 20px

  &:hover
    box-shadow: 0 0px 28px rgba(255,255,255,0.25), 0 0px 10px rgba(255,255,255,0.22)

.button_inline
  display inline-block

.button_login
  margin-left 25%
  &:hover
    text-shadow: 0 0px 28px rgba(255,255,255,0.45), 0 0px 10px rgba(255,255,255,0.42)

.logo
  margin 0 auto
  width 55%
  text-align center

  h1.slogan
    font-family Roboto-Bold
    color white
    text-transform uppercase
    font-size (68/mainFont)em
    font-weight bold
    letter-spacing 0.07em
    padding-bottom 0.45em

  h1 span:nth-child(2)
    line-height 1.43em


  h3.second-slogan
    font-family Roboto
    color white
    font-size 1.78em
    letter-spacing 0.0324em
    word-spacing 0.003em
    margin-bottom 7.4%

.button_red
  width 270px
  margin 0 auto
  padding 0.98em
  letter-spacing 0.02em
  background-color buttonRed
  border-radius 230px

main.main
  border-bottom: 15px solid buttonRed  

.topic
  text-align center
  width 60%
  font-family Montserrat-Bold
  font-size 1.85em
  margin 0 auto
  margin-bottom:  4%
  letter-spacing -0.015em
  word-spacing -0.02em

.topic-section
  padding-bottom: 10.3%
  
.sliders
  display flex
  justify-content space-between

.sliders__item
  width 31.85%
  background #ccc

.item-inner
  position relative
  height: 0
  border 0

.item-content
  position absolute
  top 0
  bottom 0
  right 0
  left 0

.ratio-4-3
  padding-bottom: 133.3333333%

.slick-prev
  left: 7%
  
  background: url('../img/arrow_slider.png') 0 0 no-repeat !important 


.slick-next
  right 7%
  background: url('../img/arrow_slider.png') -39px 0 no-repeat !important
  
.slick-prev, .slick-next
  z-index: 1500
  width 35px
  height 60px
  border none 
  outline none 

.slick-prev:before, .slick-next:before
  color buttonRed
  content: ''

.stick-prev::-moz-focus-inner
  border: 0 

.item__textwrap
  position absolute
  bottom 4.5%
  padding 0 5.6%

.item__step
  font: 1.0em Montserrat 
  color: white
  background-color: buttonRed 
  width 25%
  padding 0.7%
  border-radius: 20px
  margin-bottom: 6%
  margin-left: 1%

.item__topic
  font: 1.9em Montserrat-Bold
  color white
  margin-bottom 5%
  
.item__textCont
  font: 1.1em Roboto-Light
  color white
  line-height: 1.2em
.partners
  display: flex
  flex-wrap: nowrap
  justify-content: space-around
  margin-bottom 5.8%

.partner
  display flex
  flex-direction: column
  align-items center
  align-content: flex-start
  width 20.0%
  padding-top 4.5%
  &:first-child .icon
    background-color: #ff4e50
  &:nth-child(2) .icon
    background-color: #1cd7ad
  &:nth-child(3) .icon
    background-color: #ffa507
  &:last-child .icon
    background-color: #4e73db

.partner-picture
  position relative
  width: 120px
  margin-bottom: 20px

.icon
  width 30px
  height 30px
  position absolute
  bottom: 5%
  right: 5%
  border 2px solid white
  border-radius: 16px

.svg-icon
  width 16px
  height 16px
  position absolute 
  top 23%
  left 23%

.svg-icon-paperplane
  background url('../img/svg_sprite.svg#paperplane-svg')

.svg-icon-tv
  background url('../img/svg_sprite.svg#tv-svg')

.svg-icon-cup
  background url('../img/svg_sprite.svg#cup-svg')

.svg-icon-colb
  background url('../img/svg_sprite.svg#colb-svg')

.svg-conatiner
  width 100%
  height 100%
  position relative

.photo
  border-radius: 200px;

.partner-name
  font-family: Montserrat-Bold
  font-size: 0.875em
  margin-bottom: 20px

.partner-slogan
  font-family:  Roboto-Light
  font-size: 0.875em
  text-align center


.grid_item
  height: 250px
  margin-bottom: 10px
  border-radius 15px

// .grid_sizer
//   width: 30%

// .gutter_sizer
//   width: 0%
  
.grid_item--width2
  width: 65.0%

.grid_item--width1
  width 32.0%

.search-block_text
  font 1.1em Roboto-Light
  margin 0 auto
  margin-bottom 50px
  width 260px

.search-block_form
  width 700px
  margin 0 auto

.input-search
  font-family: "Roboto-Light"
  font-size: (mainFont/14)em
  background-color: white
  border 1px solid LightGray
  border-radius: 3px
  width 350px
  padding 1.5% 2% 2% 5%
  margin-right: 5%

.search-block_form input 
  display inline-block

.button_red--search 
  width 200px

.bottom-line:after
  height 1%
  background-color: buttonRed

.footer
  padding-top 3.5%

.footer-leftblock
  float: left
  width: 75%

.footer-rightblock
  float: right
  width 25%


.footer-headers
  font-family: "Montserrat-Bold"
  font-size: (14 / 16)em
  vertical-align: top

.contacts-item
  font-family: "Roboto-Light"
  font-size: (14 / 16)em
  margin-top 20%
  

.footer-leftblock-contacts,
.footer-leftblock-partners
  display: inline-block
  margin-left 5%
  vertical-align: top

.footer-logo-text
  font-family: "Montserrat-Bold"
  font-size: (10/16)em
  text-transform: uppercase
  width: 23%
  margin-left: 35px
  color: #cccccc
  margin-bottom 10px


